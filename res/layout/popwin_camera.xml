<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black"
    >

        <LinearLayout
            android:id="@+id/layout_touch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgtouch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/qr_scaner"
                />

            <TextView
                android:id="@+id/txttouch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/touch"
                android:textColor="#ff811b"
                android:textSize="10sp" />
        </LinearLayout>
        
            <LinearLayout
            android:id="@+id/layout_camera"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgcamera"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_on_off"
                />

            <TextView
                android:id="@+id/txtcamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/camera"
                android:textColor="#ff811b"
                android:textSize="10sp" />
        </LinearLayout>
        
</LinearLayout>