<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" 
	    package="com.great.happyness"
	    android:versionCode="1" 
	    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21"/><!-- android:targetSdkVersion不能设置为23，不然wifiap会不能打开和关掉 -->
    
    <application
        android:name=".WiseApplication"
        android:allowBackup="true"  
        android:icon="@drawable/camera_laun"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo">

        <activity
            android:name=".WiseMainActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".HotSpotMainActivity"
            	  android:theme="@android:style/Theme.NoTitleBar"/>
        
        <activity android:name=".CreateWifiActivity" 
            	  android:theme="@android:style/Theme.NoTitleBar"
            	  android:screenOrientation="portrait"
            	  />
        
        <activity android:name=".ConnectWifiActivity" 
            	  android:configChanges="keyboardHidden|orientation|screenSize"
            	  android:screenOrientation="portrait"
            	  />

        <activity android:name=".SendEncodeActivity" />
        <activity android:name=".RtcCameraActivity" 
            	  android:theme="@android:style/Theme.NoTitleBar"
            	  android:screenOrientation="portrait"
            	  />
        <activity android:name=".RtcRecvActivity" 
            	  android:theme="@android:style/Theme.NoTitleBar"
            	  android:screenOrientation="portrait"
            	  />
        <activity android:name=".CameraSenderActivity" 
    	  		  android:theme="@android:style/Theme.NoTitleBar"
    	  		  android:screenOrientation="portrait"
    	  />
        
        <activity
            android:name=".RecvDecodeActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
        </activity>
       
        <receiver
            android:name="com.great.happyness.service.WakeReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.wake.gray" />
            </intent-filter>
        </receiver>
        
        <service android:name="com.great.happyness.service.WiFiAPService"
				            android:enabled="true"
				            android:exported="true"
				            android:permission="oem.permission.SENDMAIL"
				            ></service>
        
        <service
            android:name="com.great.happyness.service.WhiteService"
            android:enabled="true"
            android:exported="false"
            android:process=":white" />
        <service
            android:name="com.great.happyness.service.GrayService"
            android:enabled="true"
            android:exported="false"
            android:process=":gray" />
        <service
            android:name="com.great.happyness.service.GrayService$GrayInnerService"
            android:enabled="true"
            android:exported="false"
            android:process=":gray" />
        <service
            android:name="com.great.happyness.service.BackgroundService"
            android:enabled="true"
            android:exported="false"
            android:process=":bg" />
        <service
            android:name="com.great.happyness.service.WakeReceiver$WakeNotifyService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name="com.great.happyness.service.WakeReceiver$WakeGrayInnerService"
            android:enabled="true"
            android:exported="false" />
    </application>
    
    <uses-permission android:protectionLevel="normal" android:name="oem.permission.SENDMAIL"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_CONTACTS" /> 
	<uses-permission android:name="android.permission.WRITE_SETTINGS" /> 
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECORD_VIDEO"/>
    <uses-permission android:name="android.permission.READ_OWNER_DATA" />
    <uses-permission android:name="android.permission.WRITE_OWNER_DATA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.CAMERA" /> 
	<uses-permission android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.wifi" android:required="true"/>
    
</manifest>
